<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.bearbit.Main.ProductInfo">

    <TextView
        android:id="@+id/brandTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:text="@string/name"
        android:textSize="25sp"
        app:fontFamily="@font/tajawal_light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infoColorTag" />

    <TextView
        android:id="@+id/nameTextBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:text="@string/name"
        android:textSize="40sp"
        app:fontFamily="@font/tajawal_light"
        app:layout_constraintEnd_toStartOf="@+id/calTextBox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/brandTextView" />

    <TextView
        android:id="@+id/nameTextBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:text="Protein"
        android:textSize="20sp"
        app:fontFamily="@font/tajawal_light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameTextBox" />

    <TextView
        android:id="@+id/nameTextBox4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:text="Carbohydrates"
        android:textSize="20sp"
        app:fontFamily="@font/tajawal_light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameTextBox2" />

    <TextView
        android:id="@+id/nameTextBox6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:text="Fat"
        android:textSize="20sp"
        app:fontFamily="@font/tajawal_light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameTextBox4" />

    <TextView
        android:id="@+id/nameTextBox8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:text="Sugar"
        android:textSize="20sp"
        app:fontFamily="@font/tajawal_light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameTextBox6" />

    <TextView
        android:id="@+id/gTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:text="g"
        android:textSize="20sp"
        app:fontFamily="@font/tajawal_light"
        app:layout_constraintStart_toEndOf="@+id/gramsEditText"
        app:layout_constraintTop_toBottomOf="@+id/nameTextBox8" />

    <TextView
        android:id="@+id/proteinTextBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:text="@string/name"
        android:textSize="20sp"
        app:fontFamily="@font/tajawal_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameTextBox" />

    <TextView
        android:id="@+id/carbsTextBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:text="@string/name"
        android:textSize="20sp"
        app:fontFamily="@font/tajawal_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/proteinTextBox" />

    <TextView
        android:id="@+id/fatTextBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:text="@string/name"
        android:textSize="20sp"
        app:fontFamily="@font/tajawal_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/carbsTextBox" />

    <TextView
        android:id="@+id/sugarTextBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:text="@string/name"
        android:textSize="20sp"
        app:fontFamily="@font/tajawal_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fatTextBox" />

    <TextView
        android:id="@+id/calTextBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:text="@string/name"
        android:textSize="40sp"
        app:fontFamily="@font/tajawal_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infoColorTag" />

    <EditText
        android:id="@+id/gramsEditText"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="150dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="150dp"
        android:layout_marginRight="150dp"
        android:autoText="false"
        android:background="@drawable/edit_text"
        android:cursorVisible="true"
        android:ems="10"
        android:gravity="center"
        android:hint="100"
        android:inputType="number"
        android:paddingTop="5sp"
        android:singleLine="true"
        android:textSize="18sp"
        app:fontFamily="@font/tajawal_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameTextBox8" />

    <EditText
        android:id="@+id/proteinEditText"
        android:layout_width="40dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:autoText="false"
        android:background="@drawable/edit_text"
        android:cursorVisible="true"
        android:ems="10"
        android:gravity="center"
        android:hint="100"
        android:inputType="number|textEmailAddress"
        android:paddingTop="5sp"
        android:singleLine="true"
        android:textSize="18sp"
        app:fontFamily="@font/tajawal_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calTextBox" />

    <EditText
        android:id="@+id/carbsEditText"
        android:layout_width="40dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:autoText="false"
        android:background="@drawable/edit_text"
        android:cursorVisible="true"
        android:ems="10"
        android:gravity="center"
        android:hint="100"
        android:inputType="number|textEmailAddress"
        android:paddingTop="5sp"
        android:singleLine="true"
        android:textSize="18sp"
        app:fontFamily="@font/tajawal_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/proteinTextBox" />

    <EditText
        android:id="@+id/fatEditText"
        android:layout_width="40dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:autoText="false"
        android:background="@drawable/edit_text"
        android:cursorVisible="true"
        android:ems="10"
        android:gravity="center"
        android:hint="100"
        android:inputType="number|textEmailAddress"
        android:paddingTop="5sp"
        android:singleLine="true"
        android:textSize="18sp"
        app:fontFamily="@font/tajawal_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/carbsTextBox" />

    <EditText
        android:id="@+id/sugarEditText"
        android:layout_width="40dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:autoText="false"
        android:background="@drawable/edit_text"
        android:cursorVisible="true"
        android:ems="10"
        android:gravity="center"
        android:hint="100"
        android:inputType="number|textEmailAddress"
        android:paddingTop="5sp"
        android:singleLine="true"
        android:textSize="18sp"
        app:fontFamily="@font/tajawal_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fatTextBox" />

    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:autoText="false"
        android:background="@drawable/edit_text"
        android:cursorVisible="true"
        android:ems="10"
        android:gravity="center"
        android:hint="Name"
        android:inputType="text"
        android:paddingTop="5sp"
        android:singleLine="true"
        android:textSize="18sp"
        app:fontFamily="@font/tajawal_light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/brandTextView" />

    <EditText
        android:id="@+id/calEditText"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:autoText="false"
        android:background="@drawable/edit_text"
        android:cursorVisible="true"
        android:ems="10"
        android:gravity="center"
        android:hint="calories"
        android:inputType="number|textEmailAddress"
        android:paddingTop="5sp"
        android:singleLine="true"
        android:textSize="18sp"
        app:fontFamily="@font/tajawal_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infoColorTag" />

    <EditText
        android:id="@+id/brandEditText"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:autoText="false"
        android:background="@drawable/edit_text"
        android:cursorVisible="true"
        android:ems="10"
        android:gravity="center"
        android:hint="Brand"
        android:inputType="text"
        android:paddingTop="5sp"
        android:singleLine="true"
        android:textSize="18sp"
        app:fontFamily="@font/tajawal_light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infoColorTag" />

    <LinearLayout
        android:id="@+id/infoColorTag"
        android:layout_width="106dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/green_colored_label"
        android:elevation="2sp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </LinearLayout>

    <Button
        android:id="@+id/erraseButton"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="30dp"
        android:background="@drawable/errase_selector"
        android:textColor="@color/colorPrimary"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/addNewProduct"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="130dp"
        android:layout_height="90dp"
        android:layout_gravity="bottom|center"
        android:background="@drawable/add_button_selector"
        android:textColor="@color/colorPrimary"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameTextBox2" />

    <View
        android:id="@+id/divider3"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameTextBox4" />

    <View
        android:id="@+id/divider4"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameTextBox6" />


</androidx.constraintlayout.widget.ConstraintLayout>
