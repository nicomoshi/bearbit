<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_layout"
    android:layout_marginTop="10sp">


    <LinearLayout
        android:id="@+id/item_color_tag"
        android:layout_width="106dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="2sp"
        android:background="@drawable/red_colored_label"
        android:elevation="2sp"
        android:orientation="horizontal">

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/item_card_view"
        android:layout_width="355dp"
        android:layout_height="66dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="26dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="5sp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="10sp"
        android:background="@drawable/red_colored_label"
        android:elevation="1sp"
        app:cardCornerRadius="15sp">

        <TextView
            android:id="@+id/item_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="12sp"
            android:fontFamily="@font/tajawal_light"
            android:text="Goldenvale"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="20sp"
            android:layout_marginBottom="10sp"
            android:fontFamily="@font/tajawal_light"
            android:paddingTop="10sp"
            android:text="Cornflakes"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/item_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:layout_marginRight="20sp"
            android:fontFamily="@font/tajawal_extra_light"
            android:text="50 kcal"
            android:textSize="20sp" />
    </androidx.cardview.widget.CardView>



</RelativeLayout>