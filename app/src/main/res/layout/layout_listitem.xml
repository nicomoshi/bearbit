<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_layout"
    android:layout_marginTop="10sp">


        <LinearLayout
            android:layout_width="90sp"
            android:layout_height="30sp"
            android:background="@drawable/red_colored_label"
            android:elevation="2sp"
            android:layout_marginLeft="7sp"
            android:layout_marginTop="2sp"
            android:id="@+id/item_color_tag">

        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60sp"
            android:layout_marginTop="5sp"
            android:layout_marginRight="10sp"
            android:layout_marginLeft="30sp"
            android:elevation="1sp"
            android:background="@drawable/red_colored_label"
            app:cardCornerRadius="15sp"
            android:layout_marginBottom="10sp"
            android:id="@+id/item_card_view">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Goldenvale"
                android:fontFamily="@font/tajawal_light"
                android:textSize="13sp"
                android:layout_marginTop="12sp"
                android:layout_marginLeft="20sp"
                android:id="@+id/item_brand"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cornflakes"
                android:fontFamily="@font/tajawal_light"
                android:textSize="20sp"
                android:layout_marginTop="30sp"
                android:layout_marginLeft="20sp"
                android:id="@+id/item_name"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50 kcal"
                android:fontFamily="@font/tajawal_extra_light"
                android:textSize="20sp"
                android:layout_marginTop="20sp"
                android:layout_marginLeft="270sp"
                android:id="@+id/item_value"/>
        </androidx.cardview.widget.CardView>



</RelativeLayout>